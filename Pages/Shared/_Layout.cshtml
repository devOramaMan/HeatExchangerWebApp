<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeatExchangerWebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HeatExchangerWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <main role="main">
        @RenderBody()
    </main>

    <!-- Secure WebPubSub Scripts (Load before other scripts) -->
    <script src="~/js/secure-webpubsub.js" asp-append-version="true"></script>
    <script src="~/js/secure-integration.js" asp-append-version="true"></script>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
